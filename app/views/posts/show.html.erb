<p id="notice"><%= notice %></p>

<h3>記事</h3>
<p>
<strong>編集者:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>タイトル:</strong>
  <%= @post.title %>
</p>

<p>
<strong>本文:</strong><br />
  <%= simple_format @post.content %>
</p>

<h3>コメント</h3>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
